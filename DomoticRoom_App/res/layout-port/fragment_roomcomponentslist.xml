<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bConnect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/doorFragment"
        android:drawableRight="@drawable/ic_bluetooth"
        android:onClick="forceToConnect"
        android:text="@string/sConnect" />

        <Button
     
            android:id="@+id/bMovetoroom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/customBlue"
            android:drawableRight="@drawable/ic_movetoroom"
            android:onClick="movetoroom"
            android:text="@string/sPassToRoom" />

    <ListView
        android:id="@+id/LstListado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>